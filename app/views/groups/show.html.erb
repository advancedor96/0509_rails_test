<%= link_to("新增文章", new_group_post_path(@group), class: "btn btn-warning pull-right") %>

<h2><%= @group.title %></h2>
<p><%= @group.description %></p>

<table class="table table-hover">
	<tr>
		<th>文章編號</th>
		<th>內容</th>
		<th>編輯</th>
		<th>刪除</th>
	</tr>

	<% @posts.each do |post| %>
	<tr>
		<td><%= post.id %></td>
		<td><%= post.content  %></td>
		<td><%= link_to("編輯", edit_group_post_path(@group, post))  %></td>
		<td><%= link_to("刪除", group_post_path(@group, post), method: :delete, data: { confirm: "確定刪除？"} ) %></td>
	</tr>

	<% end %>
</table>