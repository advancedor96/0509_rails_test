<h2>我發布的文章</h2>

<table class="table table-hover">
	<tr>
		<th>文章編號</th>
		<th>內容</th>
		<th>作者id編號</th>
		<th>時間</th>
		<th>編輯</th>
		<th>刪除</th>
	</tr>

	<% @posts.each do |post| %>
	<tr>
	
		<td><%= post.id %></td>
		<td><%= post.content  %></td>
		<td><%= post.user_id  %></td>
		<td><%= post.updated_at  %></td>

		<td>
			<% if post.is_editable_by?(current_user) %>
			<%= link_to("編輯", edit_group_post_path(post.group_id, post))  %>
			<% end %>
		</td>

		<td>
			<% if post.is_editable_by?(current_user) %>
			<%= link_to("刪除", group_post_path(post.group_id, post), method: :delete, data: { confirm: "確定刪除？"} ) %>
			<% end %>
		</td>


	</tr>

	<% end %>
</table>